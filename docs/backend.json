
{
  "entities": {
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product listing in the marketplace.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "price": { "type": "number" },
        "category": { "type": "string" },
        "condition": { "type": "string" },
        "imageUrl": { "type": "string" },
        "sellerId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "price", "sellerId", "createdAt"]
    },
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user profile in the EcoCity application.",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phoneNumber": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" },
        "rewardPoints": { "type": "number" },
        "dob": { "type": "string", "format": "date" },
        "gender": { "type": "string" },
        "address": { "type": "string" },
        "defaultAddressId": { "type": "string" }
      },
      "required": ["name", "email", "dob", "gender", "phoneNumber", "address"]
    },
    "UserAddress": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserAddress",
      "type": "object",
      "description": "Represents a user's saved address.",
      "properties": {
        "name": { "type": "string" },
        "phoneNumber": { "type": "string" },
        "pincode": { "type": "string" },
        "addressLine": { "type": "string" },
        "city": { "type": "string" },
        "state": { "type": "string" },
        "isDefault": { "type": "boolean" }
      },
      "required": ["name", "phoneNumber", "pincode", "addressLine", "city", "state"]
    },
    "Reward": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Reward",
      "type": "object",
      "description": "Represents a reward coupon for a user.",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "code": { "type": "string" },
        "discountType": { "type": "string", "enum": ["percentage", "fixed"] },
        "discountValue": { "type": "number" },
        "expiryDate": { "type": "string", "format": "date-time" },
        "isUsed": { "type": "boolean" },
        "source": { "type": "string" }
      },
      "required": ["title", "code", "discountType", "discountValue", "expiryDate"]
    },
    "Order": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Order",
      "type": "object",
      "description": "Represents a user's order in the marketplace.",
      "properties": {
        "userId": { "type": "string" },
        "items": { 
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "number" },
              "name": { "type": "string" },
              "price": { "type": "number" },
              "quantity": { "type": "number" },
              "image": { "type": "string" }
            },
            "required": ["id", "name", "price", "quantity"]
          }
        },
        "totalAmount": { "type": "number" },
        "status": { "type": "string", "enum": ["Placed", "Shipped", "Delivered", "Cancelled"] },
        "shippingAddress": { "type": "object" },
        "paymentMethod": { "type": "string" },
        "cancellationReason": { "type": ["string", "null"] },
        "appliedCoupon": { "type": "object" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "items", "totalAmount", "status", "createdAt", "paymentMethod"]
    },
     "LeaderboardEntry": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "LeaderboardEntry",
      "type": "object",
      "description": "Represents a user's entry on the leaderboard.",
      "properties": {
        "name": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" },
        "highestScore": { "type": "number" }
      },
      "required": ["name", "highestScore"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "schema": { "$ref": "#/entities/UserProfile" },
          "description": "Stores user profiles and application-specific data."
        }
      },
      {
        "path": "/users/{userId}/addresses/{addressId}",
        "definition": {
          "schema": { "$ref": "#/entities/UserAddress" },
          "description": "Stores a user's saved shipping addresses."
        }
      },
      {
        "path": "/users/{userId}/rewards/{rewardId}",
        "definition": {
            "schema": { "$ref": "#/entities/Reward" },
            "description": "Stores reward coupons earned by the user."
        }
      },
       {
        "path": "/users/{userId}/orders/{orderId}",
        "definition": {
            "schema": { "$ref": "#/entities/Order" },
            "description": "Stores a user's marketplace orders."
        }
      },
      {
        "path": "/leaderboard/{userId}",
        "definition": {
            "schema": { "$ref": "#/entities/LeaderboardEntry" },
            "description": "Stores public leaderboard data for users with a high score."
        }
      }
    ]
  }
}
