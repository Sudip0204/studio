rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile data.
     * @path /users/{userId}
     * @allow (create) Signed-in user creating their own profile.
     * @allow (get, update, delete) Signed-in user accessing their own profile.
     * @deny (create) Signed-in user creating another user's profile.
     * @deny (get, update, delete) Signed-in user accessing another user's profile.
     * @deny (list) Listing all user profiles.
     * @principle Enforces user-specific data ownership for profile management.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isSignedIn() && isOwner(userId) && exists(resource);
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId) && request.auth.uid == resource.data.userId;
      allow delete: if isSignedIn() && isOwner(userId) && request.auth.uid == resource.data.userId;
    }

    /**
     * @description Controls access to community forum posts.
     * @path /forumposts/{postId}
     * @allow (get, list) Publicly accessible forum posts.
     * @allow (create) Signed-in user creating a new post.
     * @allow (update, delete) Signed-in user who is the author of the post.
     * @deny (create) Unauthenticated users cannot create posts.
     * @deny (update, delete) Users cannot modify or delete posts they don't own.
     * @principle Allows public read access to posts but restricts write access to authenticated authors.
     */
    match /forumposts/{postId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(authorId) {
        return request.auth.uid == authorId;
      }
       function isExistingOwner(authorId) {
        return isSignedIn() && isOwner(authorId) && exists(resource);
      }
      allow get, list: if true;
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.authorId;
      allow update: if isSignedIn() && request.auth.uid == resource.data.authorId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.authorId;
    }

    /**
     * @description Controls access to comments on forum posts.
     * @path /forumposts/{postId}/comments/{commentId}
     * @allow (get, list) Anyone can read the comments.
     * @allow (create) Signed-in user can create a comment.
     * @allow (update, delete) Signed-in user who is the author of the comment.
     * @deny (create) Unauthenticated users cannot create comments.
     * @deny (update, delete) Users cannot modify or delete comments they don't own.
     * @principle  Allows public read access to comments but restricts write access to authenticated authors.
     */
    match /forumposts/{postId}/comments/{commentId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(authorId) {
        return request.auth.uid == authorId;
      }
       function isExistingOwner(authorId) {
        return isSignedIn() && isOwner(authorId) && exists(resource);
      }
      allow get, list: if true;
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.authorId;
      allow update: if isSignedIn() && request.auth.uid == resource.data.authorId;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.authorId;
    }

     /**
      * @description Controls access to leaderboard entries.
      * @path /leaderboard/{scoreId}
      * @allow (get, list) Anyone can read the leaderboard.
      * @allow (create) Signed-in user can create a leaderboard entry.
      * @deny (update, delete) No one can update or delete a leaderboard entry.
      * @principle  Allows public read access to leaderboard but restricts write access to authenticated authors.
      */
    match /leaderboard/{scoreId} {
       function isSignedIn() {
        return request.auth != null;
      }
      allow get, list: if true;
      allow create: if isSignedIn();
      allow update: if false;
      allow delete: if false;
    }
  }
}