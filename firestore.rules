/**
 * @description This ruleset enforces a strict user-ownership model for user profiles and rewards.
 *              It allows public read access to product listings and recycling center data but restricts modifications to owners.
 *              Forum posts and comments are also owner-controlled.
 * @dataStructure
 *   - /users/{userId}: Stores user profile data, accessible only to the user themselves.
 *   - /products/{productId}: Stores product listings, publicly readable but writable only by the seller.
 *   - /recyclingcenters/{recyclingcenterId}: Stores recycling center data, publicly readable.
 *   - /users/{userId}/rewards/{rewardId}: Stores user-specific rewards, accessible only to the user.
 *   - /forumposts/{postId}: Stores forum posts, writable only by the author.
 *   - /forumposts/{postId}/comments/{commentId}: Stores comments on forum posts, writable only by the author.
 *   - /forumposts/{postId}/likes/{userId}: Stores likes on a post, the document id must match the user id.
 * @keySecurityDecisions
 *   - Users can only access their own profile and rewards data.
 *   - Product listings and recycling center data are publicly readable.
 *   - Write operations are restricted to the appropriate owners.
 *   - Listing of the entire user base is disallowed.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }
    
    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (get, list, update, delete) User accessing their own profile data.
     * @deny (get, list, update, delete) User attempting to access another user's profile data.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Do not allow listing of all users.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to product listing documents.
     * @path /products/{productId}
     * @allow (get, list) Any authenticated user can read product listings.
     * @allow (create) Authenticated user can create a product if the sellerId matches their user ID.
     * @allow (update, delete) Only the product owner can update or delete the listing.
     * @deny (create) Unauthenticated user attempting to create a product.
     * @deny (update, delete) User attempting to modify a product they don't own.
     * @principle Allows public read access with owner-only writes for product listings.
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.sellerId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.sellerId == request.auth.uid && resource != null;
      allow delete: if isSignedIn() && resource.data.sellerId == request.auth.uid && resource != null;
    }

    /**
     * @description Controls access to recycling center documents.
     * @path /recyclingcenters/{recyclingcenterId}
     * @allow (get, list) Any authenticated user can read recycling center data.
     * @deny (create, update, delete) No user can create, update, or delete recycling center data directly.
     * @principle Allows public read-only access to recycling center data.
     */
    match /recyclingcenters/{recyclingcenterId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Controls access to user-specific reward documents.
     * @path /users/{userId}/rewards/{rewardId}
     * @allow (get, list, update, delete) User accessing their own reward data.
     * @deny (get, list, update, delete) User attempting to access another user's reward data.
     * @principle Enforces document ownership for user rewards.
     */
    match /users/{userId}/rewards/{rewardId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to forum post documents.
     * @path /forumposts/{postId}
     * @allow (get, list) Any authenticated user can read forum posts.
     * @allow (create) Authenticated user can create a post if the authorId matches their user ID.
     * @allow (update, delete) Only the post owner can update or delete the post.
     * @deny (create) Unauthenticated user attempting to create a post.
     * @deny (update, delete) User attempting to modify a post they don't own.
     * @principle Allows public read access with owner-only writes for forum posts.
     */
    match /forumposts/{postId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.authorId == request.auth.uid && resource != null;
      allow delete: if isSignedIn() && resource.data.authorId == request.auth.uid && resource != null;
    }

    /**
     * @description Controls access to comment documents on forum posts.
     * @path /forumposts/{postId}/comments/{commentId}
     * @allow (get, list) Any authenticated user can read comments.
     * @allow (create) Authenticated user can create a comment if the authorId matches their user ID.
     * @allow (update, delete) Only the comment owner can update or delete their comment.
     * @deny (create) Unauthenticated user attempting to create a comment.
     * @deny (update, delete) User attempting to modify a comment they don't own.
     * @principle Allows public read access with owner-only writes for post comments.
     */
    match /forumposts/{postId}/comments/{commentId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.authorId == request.auth.uid && resource != null;
      allow delete: if isSignedIn() && resource.data.authorId == request.auth.uid && resource != null;
    }

     /**
      * @description Controls access to likes on forum posts. The document id must be the user id.
      * @path /forumposts/{postId}/likes/{userId}
      * @allow get: if true;
      * @allow list: if true;
      * @allow create: if isSignedIn() && request.auth.uid == userId && request.resource.data.userId == request.auth.uid;
      * @allow update: if false;
      * @allow delete: if isOwner(userId) && resource != null;
      */
    match /forumposts/{postId}/likes/{userId} {
       allow get, list: if true;
       allow create: if isSignedIn() && request.auth.uid == userId && request.resource.data.userId == request.auth.uid;
       allow update: if false;
       allow delete: if isExistingOwner(userId);
    }
  }
}